{
  "manifest_version": 3,
  "name": "Outlook - Group Similar Emails",
  "version": "1.0",
  "description": "Simple script that consolidates messages visually that are next to each other and have identical sender and subject.",
  "host_permissions": [
    "https://outlook.live.com/*",
    "https://outlook.office.com/*",
    "https://outlook.office365.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
